doctype html
html(lang="en")
  head
    title Inscription - Mon Projet Iflex
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
  body
    header
      nav.navbar.navbar-dark.bg-dark
        span.navbar-brand.mb-0.h1 Mon Projet Iflex

    main.container.mt-5
      h2 Inscription
      form(method="POST", action="/register")
        .form-group.mb-3
          label(for="username") Nom d'utilisateur
          input#username.form-control(type="text", name="username", required=true)
        .form-group.mb-3
          label(for="password") Mot de passe
          input#password.form-control(type="password", name="password", required=true)
        .form-group.mb-3
          label(for="firstname") Prénom
          input#firstname.form-control(type="text", name="firstname")
        .form-group.mb-3
          label(for="lastname") Nom de famille
          input#lastname.form-control(type="text", name="lastname")
        button.btn.btn-primary(type="submit") S'inscrire

      p Déjà inscrit ? 
        a(href="/login") Se connecter
